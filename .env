# Configuración de la aplicación IAtiva Web

# Puerto del servidor (Railway lo asigna automáticamente)
PORT=3000

# Secreto para las sesiones (cambiar en producción)
SESSION_SECRET=tu-secreto-super-seguro-aqui

# Entorno de ejecución
NODE_ENV=production

# URL base de la aplicación (se asigna automáticamente en Railway)
BASE_URL=https://tu-app.railway.app

# Configuración de base de datos SQLite
DB_PATH=./data/iativa.db

# Configuración de seguridad
BCRYPT_ROUNDS=10

# Configuración de archivos
MAX_FILE_SIZE=10485760
UPLOADS_DIR=./uploads

# Configuración de reportes
REPORTS_DIR=./reportes

# Configuración de email (opcional para notificaciones)
# EMAIL_SERVICE=gmail
# EMAIL_USER=tu-email@gmail.com
# EMAIL_PASS=tu-password-de-app

# Configuración de analytics (opcional)
# GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Debug y logs
DEBUG=false
LOG_LEVEL=info