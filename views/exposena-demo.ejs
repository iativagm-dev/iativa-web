<!-- Script para stats en tiempo real -->
<script>
let statsInterval;

async function loadStats() {
    try {
        const response = await fetch('/api/demo-stats');
        if (response.ok) {
            const stats = await response.json();
            
            document.getElementById('totalAnalyses').textContent = stats.total_analyses.toLocaleString();
            document.getElementById('demoSessions').textContent = stats.demo_sessions.toLocaleString();
            document.getElementById('debtDemos').textContent = stats.debt_demos.toLocaleString();
            document.getElementById('usersRegistered').textContent = stats.users_registered.toLocaleString();
            
            document.getElementById('lastUpdate').textContent = new Date(stats.last_updated).toLocaleString('es-CO');
        }
    } catch (error) {
        console.error('Error loading stats:', error);
    }
}

// Cargar stats iniciales
document.addEventListener('DOMContentLoaded', function() {
    loadStats();
    
    // Actualizar cada 30 segundos
    statsInterval = setInterval(loadStats, 30000);
});

// Limpiar interval al salir de la p√°gina
window.addEventListener('beforeunload', function() {
    if (statsInterval) {
        clearInterval(statsInterval);
    }
});

// Efectos visuales adicionales
document.addEventListener('DOMContentLoaded', function() {
    // Animaci√≥n de entrada para las tarjetas
    const cards = document.querySelectorAll('.bg-white.bg-opacity-10');
    cards.forEach((card, index) => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(20px)';
        setTimeout(() => {
            card.style.transition = 'all 0.5s ease-out';
            card.style.opacity = '1';
            card.style.transform = 'translateY(0)';
        }, index * 100);
    });
});
</script>

