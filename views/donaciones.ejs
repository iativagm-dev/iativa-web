<!-- Modal de Carga -->
<div id="loadingModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white rounded-lg p-6 max-w-sm mx-auto text-center">
        <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-iativa-blue mx-auto mb-4"></div>
        <p class="text-gray-700">Procesando tu donaci√≥n...</p>
        <p class="text-sm text-gray-500 mt-2">Ser√°s redirigido a MercadoPago</p>
    </div>
</div>

<script>
// Funci√≥n para donar con opciones predefinidas
async function donate(tipo) {
    const email = prompt('Por favor, ingresa tu email para procesar la donaci√≥n:');
    if (!email || !email.includes('@')) {
        alert('Por favor, ingresa un email v√°lido');
        return;
    }
    
    const nombre = prompt('Tu nombre (opcional):') || '';
    
    await processDonation(tipo, null, email, nombre);
}

// Funci√≥n para donaci√≥n personalizada
document.getElementById('customDonationForm').addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const amount = parseInt(document.getElementById('customAmount').value);
    const name = document.getElementById('donorName').value;
    const email = document.getElementById('donorEmail').value;
    
    if (!amount || amount < 1000) {
        alert('El monto m√≠nimo de donaci√≥n es $1,000 COP');
        return;
    }
    
    if (!email) {
        alert('El email es requerido');
        return;
    }
    
    await processDonation('personalizada', amount, email, name);
});

// Procesar donaci√≥n
async function processDonation(tipo, monto, email, nombre) {
    const loadingModal = document.getElementById('loadingModal');
    loadingModal.classList.remove('hidden');
    loadingModal.classList.add('flex');
    
    try {
        const response = await fetch('/api/create-donation', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                tipo: tipo,
                monto_personalizado: monto,
                email: email,
                nombre: nombre
            })
        });
        
        const data = await response.json();
        
        if (data.success) {
            // Redirigir a MercadoPago
            window.location.href = data.payment_url;
        } else {
            throw new Error(data.error || 'Error procesando la donaci√≥n');
        }
        
    } catch (error) {
        console.error('Error:', error);
        alert('Error procesando la donaci√≥n: ' + error.message);
        loadingModal.classList.add('hidden');
        loadingModal.classList.remove('flex');
    }
}
</script>

