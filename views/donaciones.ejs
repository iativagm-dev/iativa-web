<div id="loadingModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white rounded-lg p-6 max-w-sm mx-auto text-center">
        <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-iativa-blue mx-auto mb-4"></div>
        <p class="text-gray-700">Procesando tu donaci√≥n...</p>
        <p class="text-sm text-gray-500 mt-2">Ser√°s redirigido a MercadoPago</p>
    </div>
</div>

<script>
// Funci√≥n para donar con opciones predefinidas
async function donate(tipo, metodo) {
    const email = prompt('Por favor, ingresa tu email para procesar la donaci√≥n:');
    if (!email || !email.includes('@')) {
        alert('Por favor, ingresa un email v√°lido');
        return;
    }

    const nombre = prompt('Tu nombre (opcional):') || '';

    await processDonation(tipo, null, email, nombre, metodo);
}

// Funci√≥n para donaci√≥n personalizada
document.getElementById('customDonationForm').addEventListener('submit', async function(e) {
    e.preventDefault();

    const amount = parseInt(document.getElementById('customAmount').value);
    const name = document.getElementById('donorName').value;
    const email = document.getElementById('donorEmail').value;

    if (!amount || amount < 1000) {
        alert('El monto m√≠nimo de donaci√≥n es $1,000 COP');
        return;
    }

    if (!email) {
        alert('El email es requerido');
        return;
    }

    // Obtener m√©todo seleccionado de Alpine.js
    const selectedMethod = window.Alpine ?
        document.querySelector('[x-data]').__x.$data.selectedMethod : 'nequi';

    await processDonation('personalizada', amount, email, name, selectedMethod);
});

// Procesar donaci√≥n
async function processDonation(tipo, monto, email, nombre, metodo) {
    // Si es Nequi, manejar directamente
    if (metodo === 'nequi') {
        processNequiDonation(tipo, monto, email, nombre);
        return;
    }

    // Si es MercadoPago, usar el flujo existente
    const loadingModal = document.getElementById('loadingModal');
    loadingModal.classList.remove('hidden');
    loadingModal.classList.add('flex');

    try {
        const response = await fetch('/api/create-donation', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                tipo: tipo,
                monto_personalizado: monto,
                email: email,
                nombre: nombre
            })
        });

        const data = await response.json();

        if (data.success) {
            // Redirigir a MercadoPago
            window.location.href = data.payment_url;
        } else {
            throw new Error(data.error || 'Error procesando la donaci√≥n');
        }

    } catch (error) {
        console.error('Error:', error);
        alert('Error procesando la donaci√≥n: ' + error.message);
        loadingModal.classList.add('hidden');
        loadingModal.classList.remove('flex');
    }
}

// Procesar donaci√≥n Nequi
function processNequiDonation(tipo, monto, email, nombre) {
    // Obtener el monto correcto
    let amount = monto;
    if (!amount) {
        // Si no es personalizada, obtener el monto predefinido
        const donaciones = {
            'cafe': 5000,
            'almuerzo': 15000,
            'impulso': 50000,
            'patrocinio': 100000
        };
        amount = donaciones[tipo] || 5000;
    }

    // Datos de Nequi
    const nequiNumber = '3217439415';
    const message = `Donaci√≥n IAtiva - ${amount.toLocaleString('es-CO')} COP${nombre ? ` - ${nombre}` : ''}`;

    // Crear URL de Nequi
    const nequiUrl = `nequi://p2p?number=${nequiNumber}&amount=${amount}&message=${encodeURIComponent(message)}`;

    // Mostrar modal con instrucciones
    showNequiModal(amount, nequiNumber, message, nequiUrl);
}

// Mostrar modal de Nequi
function showNequiModal(amount, number, message, nequiUrl) {
    const modal = document.createElement('div');
    modal.className = 'fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4';
    modal.innerHTML = `
        <div class="bg-white rounded-lg max-w-md w-full p-6">
            <div class="text-center mb-6">
                <div class="w-16 h-16 bg-purple-600 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-mobile-alt text-white text-2xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">Donaci√≥n con Nequi</h3>
                <p class="text-gray-600">Sigue estos pasos para completar tu donaci√≥n</p>
            </div>

            <div class="space-y-4 mb-6">
                <div class="bg-purple-50 rounded-lg p-4">
                    <p class="text-sm font-medium text-purple-800 mb-2">üí∞ Monto a donar:</p>
                    <p class="text-2xl font-bold text-purple-600">$${amount.toLocaleString('es-CO')} COP</p>
                </div>

                <div class="bg-gray-50 rounded-lg p-4">
                    <p class="text-sm font-medium text-gray-800 mb-2">üì± N√∫mero Nequi:</p>
                    <p class="text-lg font-mono font-bold text-gray-900">${number}</p>
                </div>

                <div class="bg-gray-50 rounded-lg p-4">
                    <p class="text-sm font-medium text-gray-800 mb-2">‚úçÔ∏è Mensaje (opcional):</p>
                    <p class="text-sm text-gray-700">${message}</p>
                </div>
            </div>

            <div class="space-y-3">
                <button onclick="window.open('${nequiUrl}', '_blank')"
                        class="w-full bg-purple-600 text-white py-3 px-4 rounded-lg hover:bg-purple-700 transition-colors duration-200 font-semibold">
                    üì± Abrir App Nequi
                </button>

                <div class="text-center">
                    <p class="text-xs text-gray-500 mb-2">¬øNo tienes la app instalada?</p>
                    <button onclick="copyToClipboard('${number}')"
                            class="text-purple-600 hover:text-purple-800 text-sm font-medium">
                        üìã Copiar n√∫mero Nequi
                    </button>
                </div>

                <button onclick="this.closest('.fixed').remove()"
                        class="w-full bg-gray-200 text-gray-800 py-2 px-4 rounded-lg hover:bg-gray-300 transition-colors duration-200">
                    Cerrar
                </button>
            </div>
        </div>
    `;

    document.body.appendChild(modal);

    // Cerrar modal al hacer click fuera
    modal.addEventListener('click', function(e) {
        if (e.target === modal) {
            modal.remove();
        }
    });
}

// Copiar al portapapeles
function copyToClipboard(text) {
    navigator.clipboard.writeText(text).then(function() {
        alert('N√∫mero Nequi copiado: ' + text);
    }, function() {
        // Fallback para navegadores sin soporte
        const textArea = document.createElement('textarea');
        textArea.value = text;
        document.body.appendChild(textArea);
        textArea.select();
        document.execCommand('copy');
        document.body.removeChild(textArea);
        alert('N√∫mero Nequi copiado: ' + text);
    });
}
</script>

