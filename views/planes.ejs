<!DOCTYPE html>
<html lang="es" class="h-full bg-gray-50">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Configuración de Tailwind personalizada -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'iativa-gold': '#C9A961',
                        'iativa-blue': '#1E88E5',
                        'iativa-green': '#4CAF50',
                        'iativa-dark': '#1A365D',
                        'iativa-purple': '#764ba2',
                        'iativa-red': '#e53e3e',
                        'iativa-orange': '#ed8936'
                    }
                }
            }
        }
    </script>
</head>

<body class="h-full bg-gray-50">
    <!-- Navegación -->
    <% if (locals.user) { %>
        <nav class="bg-gradient-to-r from-iativa-blue to-iativa-green shadow-lg">
            <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
                <div class="flex h-16 justify-between items-center">
                    <div class="flex items-center">
                        <i class="fas fa-brain text-white text-2xl mr-2"></i>
                        <span class="text-white text-xl font-bold">IAtiva</span>
                    </div>
                    <div class="flex items-center space-x-4">
                        <a href="/dashboard" class="text-white hover:text-gray-200">Dashboard</a>
                        <a href="/demo" class="text-white hover:text-gray-200">Demo</a>
                        <span class="text-white">Hola, <%= user.name %></span>
                        <form action="/logout" method="POST" class="inline">
                            <button type="submit" class="text-white hover:text-gray-200">Salir</button>
                        </form>
                    </div>
                </div>
            </div>
        </nav>
    <% } else { %>
        <nav class="bg-gradient-to-r from-iativa-blue to-iativa-green shadow-lg">
            <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
                <div class="flex h-16 justify-between items-center">
                    <div class="flex items-center">
                        <i class="fas fa-brain text-white text-2xl mr-2"></i>
                        <span class="text-white text-xl font-bold">IAtiva</span>
                    </div>
                    <div class="flex items-center space-x-4">
                        <a href="/" class="text-white hover:text-gray-200">Inicio</a>
                        <a href="/demo" class="text-white hover:text-gray-200">Demo</a>
                        <a href="/login" class="text-white hover:text-gray-200">Iniciar Sesión</a>
                    </div>
                </div>
            </div>
        </nav>
    <% } %>

<div class="min-h-screen bg-gradient-to-br from-iativa-blue to-iativa-green py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="text-center mb-16">
            <h1 class="text-4xl font-bold text-white mb-4">
                <i class="fas fa-crown text-iativa-gold mr-3"></i>
                Planes de Suscripción IAtiva
            </h1>
            <p class="text-xl text-gray-200 max-w-3xl mx-auto">
                Elige el plan perfecto para hacer crecer tu negocio con análisis profesionales de costos
            </p>
        </div>

        <!-- Planes -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
            <!-- Plan Básico -->
            <div class="bg-white rounded-2xl shadow-2xl p-8 transform hover:scale-105 transition-all duration-300">
                <div class="text-center">
                    <div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                        <i class="fas fa-rocket text-iativa-blue text-2xl"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-2">Plan Básico</h3>
                    <div class="text-4xl font-bold text-iativa-blue mb-2">
                        $19.900
                        <span class="text-lg text-gray-600 font-normal">/mes</span>
                    </div>
                    <p class="text-gray-600 mb-6">Perfecto para emprendedores</p>
                </div>

                <ul class="space-y-3 mb-8">
                    <li class="flex items-start">
                        <i class="fas fa-check text-green-500 mr-3 mt-1"></i>
                        <span>Análisis de costos ilimitados</span>
                    </li>
                    <li class="flex items-start">
                        <i class="fas fa-check text-green-500 mr-3 mt-1"></i>
                        <span>Dashboard personalizado</span>
                    </li>
                    <li class="flex items-start">
                        <i class="fas fa-check text-green-500 mr-3 mt-1"></i>
                        <span>Reportes PDF profesionales</span>
                    </li>
                    <li class="flex items-start">
                        <i class="fas fa-check text-green-500 mr-3 mt-1"></i>
                        <span>Soporte por email</span>
                    </li>
                </ul>

                <button onclick="suscribirse('basico')" 
                        class="w-full bg-iativa-blue text-white py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors">
                    Empezar Ahora
                </button>
            </div>

            <!-- Plan Pro -->
            <div class="bg-white rounded-2xl shadow-2xl p-8 transform hover:scale-105 transition-all duration-300 relative border-4 border-iativa-gold">
                <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
                    <span class="bg-iativa-gold text-white px-6 py-2 rounded-full text-sm font-bold">
                        MÁS POPULAR
                    </span>
                </div>
                
                <div class="text-center">
                    <div class="bg-gold-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                        <i class="fas fa-star text-iativa-gold text-2xl"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-2">Plan Pro</h3>
                    <div class="text-4xl font-bold text-iativa-gold mb-2">
                        $39.900
                        <span class="text-lg text-gray-600 font-normal">/mes</span>
                    </div>
                    <p class="text-gray-600 mb-6">Para negocios en crecimiento</p>
                </div>

                <ul class="space-y-3 mb-8">
                    <li class="flex items-start">
                        <i class="fas fa-check text-green-500 mr-3 mt-1"></i>
                        <span>Todo lo del Plan Básico</span>
                    </li>
                    <li class="flex items-start">
                        <i class="fas fa-check text-green-500 mr-3 mt-1"></i>
                        <span>Comparativas históricas</span>
                    </li>
                    <li class="flex items-start">
                        <i class="fas fa-check text-green-500 mr-3 mt-1"></i>
                        <span>Alertas de variación de costos</span>
                    </li>
                    <li class="flex items-start">
                        <i class="fas fa-check text-green-500 mr-3 mt-1"></i>
                        <span>Templates por industria</span>
                    </li>
                    <li class="flex items-start">
                        <i class="fas fa-check text-green-500 mr-3 mt-1"></i>
                        <span><strong>🏦 Capacidad de endeudamiento</strong></span>
                    </li>
                    <li class="flex items-start">
                        <i class="fas fa-check text-green-500 mr-3 mt-1"></i>
                        <span>Soporte prioritario</span>
                    </li>
                </ul>

                <button onclick="suscribirse('pro')" 
                        class="w-full bg-iativa-gold text-white py-3 rounded-lg font-semibold hover:bg-yellow-600 transition-colors">
                    Elegir Pro
                </button>
            </div>

            <!-- Plan Enterprise -->
            <div class="bg-white rounded-2xl shadow-2xl p-8 transform hover:scale-105 transition-all duration-300">
                <div class="text-center">
                    <div class="bg-purple-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                        <i class="fas fa-building text-purple-600 text-2xl"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-2">Enterprise</h3>
                    <div class="text-4xl font-bold text-purple-600 mb-2">
                        $79.900
                        <span class="text-lg text-gray-600 font-normal">/mes</span>
                    </div>
                    <p class="text-gray-600 mb-6">Solución completa</p>
                </div>

                <ul class="space-y-3 mb-8">
                    <li class="flex items-start">
                        <i class="fas fa-check text-green-500 mr-3 mt-1"></i>
                        <span>Todo lo del Plan Pro</span>
                    </li>
                    <li class="flex items-start">
                        <i class="fas fa-check text-green-500 mr-3 mt-1"></i>
                        <span>Análisis multi-empresa</span>
                    </li>
                    <li class="flex items-start">
                        <i class="fas fa-check text-green-500 mr-3 mt-1"></i>
                        <span>Consultoría 1:1 mensual</span>
                    </li>
                    <li class="flex items-start">
                        <i class="fas fa-check text-green-500 mr-3 mt-1"></i>
                        <span>API personalizada</span>
                    </li>
                    <li class="flex items-start">
                        <i class="fas fa-check text-green-500 mr-3 mt-1"></i>
                        <span>Soporte 24/7</span>
                    </li>
                </ul>

                <button onclick="suscribirse('enterprise')" 
                        class="w-full bg-purple-600 text-white py-3 rounded-lg font-semibold hover:bg-purple-700 transition-colors">
                    Contactar Ventas
                </button>
            </div>
        </div>

        <!-- Donaciones -->
        <div class="bg-white rounded-2xl shadow-xl p-8 mb-8">
            <div class="text-center mb-8">
                <h2 class="text-3xl font-bold text-gray-900 mb-4">
                    <i class="fas fa-heart text-red-500 mr-3"></i>
                    Apoya el Proyecto
                </h2>
                <p class="text-gray-600">Si IAtiva te ha ayudado, puedes apoyar su desarrollo con una donación</p>
            </div>

            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                <button onclick="donar('cafecito')" 
                        class="p-4 border-2 border-gray-200 rounded-lg hover:border-iativa-blue hover:bg-blue-50 transition-all">
                    <div class="text-2xl mb-2">☕</div>
                    <div class="font-semibold">$5.000</div>
                    <div class="text-sm text-gray-600">Un Cafecito</div>
                </button>
                
                <button onclick="donar('almuerzo')" 
                        class="p-4 border-2 border-gray-200 rounded-lg hover:border-iativa-green hover:bg-green-50 transition-all">
                    <div class="text-2xl mb-2">🍽️</div>
                    <div class="font-semibold">$15.000</div>
                    <div class="text-sm text-gray-600">Un Almuerzo</div>
                </button>
                
                <button onclick="donar('apoyo')" 
                        class="p-4 border-2 border-gray-200 rounded-lg hover:border-iativa-orange hover:bg-orange-50 transition-all">
                    <div class="text-2xl mb-2">🚀</div>
                    <div class="font-semibold">$50.000</div>
                    <div class="text-sm text-gray-600">Apoyo</div>
                </button>
                
                <button onclick="donar('sponsor')" 
                        class="p-4 border-2 border-gray-200 rounded-lg hover:border-iativa-gold hover:bg-yellow-50 transition-all">
                    <div class="text-2xl mb-2">👑</div>
                    <div class="font-semibold">$100.000</div>
                    <div class="text-sm text-gray-600">Sponsor</div>
                </button>
            </div>

            <div class="mt-6 text-center">
                <button onclick="mostrarDonacionPersonalizada()" 
                        class="text-iativa-blue hover:text-blue-700 font-semibold">
                    <i class="fas fa-plus mr-2"></i>Monto Personalizado
                </button>
            </div>
        </div>

        <!-- Programa de Afiliados -->
        <div class="bg-gradient-to-r from-iativa-gold to-iativa-orange rounded-2xl shadow-xl p-8 text-white text-center">
            <h2 class="text-3xl font-bold mb-4">
                <i class="fas fa-handshake mr-3"></i>
                Programa de Afiliados
            </h2>
            <p class="text-xl mb-6">Gana hasta 30% de comisión por cada referido que se suscriba</p>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                <div>
                    <div class="text-4xl font-bold mb-2">30%</div>
                    <div>Comisión primera venta</div>
                </div>
                <div>
                    <div class="text-4xl font-bold mb-2">15%</div>
                    <div>Comisión recurrente</div>
                </div>
                <div>
                    <div class="text-4xl font-bold mb-2">$50K</div>
                    <div>Bonus mensual</div>
                </div>
            </div>
            <a href="/afiliados" class="inline-block bg-white text-iativa-gold px-8 py-3 rounded-lg font-bold hover:bg-gray-100 transition-colors">
                Unirse como Afiliado
            </a>
        </div>
    </div>
</div>

<!-- Modal Donación Personalizada -->
<div id="modalDonacion" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white p-8 rounded-2xl max-w-md w-full mx-4">
        <h3 class="text-2xl font-bold text-gray-900 mb-4">Donación Personalizada</h3>
        <div class="mb-4">
            <label class="block text-gray-700 mb-2">Monto (COP)</label>
            <input type="number" id="montoPersonalizado" class="w-full border rounded-lg px-3 py-2" min="1000" step="1000" placeholder="Ej: 25000">
        </div>
        <div class="mb-6">
            <label class="block text-gray-700 mb-2">Nombre (opcional)</label>
            <input type="text" id="nombreDonante" class="w-full border rounded-lg px-3 py-2" placeholder="Tu nombre">
        </div>
        <div class="flex space-x-3">
            <button onclick="cerrarModalDonacion()" class="flex-1 bg-gray-300 text-gray-700 py-2 rounded-lg">
                Cancelar
            </button>
            <button onclick="confirmarDonacion()" class="flex-1 bg-iativa-blue text-white py-2 rounded-lg">
                Donar
            </button>
        </div>
    </div>
</div>

<script>
async function suscribirse(plan) {
    try {
        const response = await fetch('/api/create-subscription', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                plan: plan,
                email: '<%= locals.user ? user.email : "" %>'
            })
        });

        const data = await response.json();
        
        if (data.success) {
            window.open(data.payment_url, '_blank');
        } else {
            alert('Error creando suscripción: ' + data.message);
        }
    } catch (error) {
        console.error('Error:', error);
        alert('Error procesando la suscripción');
    }
}

async function donar(tipo) {
    try {
        const response = await fetch('/api/create-donation', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                tipo: tipo,
                email: '<%= locals.user ? user.email : "" %>'
            })
        });

        const data = await response.json();
        
        if (data.success) {
            window.open(data.payment_url, '_blank');
        } else {
            alert('Error creando donación: ' + data.message);
        }
    } catch (error) {
        console.error('Error:', error);
        alert('Error procesando la donación');
    }
}

function mostrarDonacionPersonalizada() {
    document.getElementById('modalDonacion').classList.remove('hidden');
}

function cerrarModalDonacion() {
    document.getElementById('modalDonacion').classList.add('hidden');
}

async function confirmarDonacion() {
    const monto = parseInt(document.getElementById('montoPersonalizado').value);
    const nombre = document.getElementById('nombreDonante').value;
    
    if (!monto || monto < 1000) {
        alert('Por favor ingresa un monto mínimo de $1.000');
        return;
    }

    try {
        const response = await fetch('/api/create-donation', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                monto: monto,
                nombre: nombre,
                email: '<%= locals.user ? user.email : "" %>'
            })
        });

        const data = await response.json();
        
        if (data.success) {
            window.open(data.payment_url, '_blank');
            cerrarModalDonacion();
        } else {
            alert('Error creando donación: ' + data.message);
        }
    } catch (error) {
        console.error('Error:', error);
        alert('Error procesando la donación');
    }
}
</script>
</body>
</html>